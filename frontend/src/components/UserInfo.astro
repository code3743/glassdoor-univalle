---
const token = Astro.locals.token;
const user = Astro.locals.user;
---

<div class="flex flex-col items-center my-4">
  {token && user && user.name ? (
    
      <h1 class="text-2xl font-bold mt-4 text-white">Hola, {user.name}</h1>
      <div class="flex space-x-4 mt-4">
        <a 
          href="/evaluation" 
          class="px-4 py-2 bg-[#EE322F] text-white rounded-md shadow-md hover:bg-[#d52b29] transition duration-300"
        >
          Evaluar profesor
        </a>
        <a 
          href="/api/auth"
          class="px-4 py-2 bg-white text-[#EE322F] rounded-md shadow-md hover:bg-[#d52b29] transition duration-300"
        >
          Cerrar sesión
        </a>
      </div>
    
  ) : (
    <a 
      href="/login" 
      class="mt-4 px-4 py-2 bg-[#EE322F] text-white rounded-md shadow-md hover:bg-[#d52b29] transition duration-300"
    >
      Iniciar sesión
    </a>
    <a id="logout"></a>
  )}
</div>
